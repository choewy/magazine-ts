{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "app/types"]
  },
  "include": [
    "./app/src/**/*",
    "./app/bin",
    "app/app.module.ts",
    "app/app.controller.ts",
    "app/app.middlware.ts",
    "app/types",
    "app/__tests__"
  ],
  "exclude": ["node_modules"]
}
