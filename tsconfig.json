{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "./app/src/**/*",
    "./app/bin",
    "app/app.ts",
    "app/src/modules/app/app.controller.ts",
    "app/src/modules/posts/error/post.pipe.error.ts",
    "app/app.middlware.ts",
    "test"
  ],
  "exclude": ["node_modules"]
}
